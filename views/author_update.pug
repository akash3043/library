extends layout

block content
  h1 #{title}
  form(method='POST', action='')
    div.form-group
      label(for='first_name') First Name:
      input#name.form-control(type='text', name='first_name', placeholder='First Name', value=(undefined===author)?'':author.first_name, required=true)
      label(for='family_name') Family Name:
      input#name.form-control(type='text', name='family_name', placeholder='Family Name', value=(undefined===author)?'':author.family_name, required=true)
      label(for='date_of_birth') Date of Birth Name:
      input#name.form-control(type='date', name='date_of_birth', placeholder='mm/dd/yyyy', value=(undefined===author)?'':author.date_of_birth)
      label(for='date_of_death') Date of Death:
      input#name.form-control(type='date', name='date_of_death', placeholder='mm/dd/yyyy', value=(undefined===author)?'':author.date_of_death)
    button.btn.btn-primary(type='submit') Submit
  if(errors)
    each error in errors
      li #{error.msg}
